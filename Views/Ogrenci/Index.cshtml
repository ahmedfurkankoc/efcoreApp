@model IEnumerable<Ogrenci>

<h2>Öğrenci Listesi</h2>
<a href="/Ogrenci/Create" class="btn btn-primary">Öğrenci Ekle</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr> @* DisplayNameFor = modelin içerisinde kullanılan kısmın sadece ismini alır.*@
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgrenciKimlik)</th>
            <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                @* DisplayFor = Değerleri almak için kullanılır.*@
                <td>@Html.DisplayFor(modelItem => item.OgrenciKimlik)</td>
                <td>@Html.DisplayFor(modelItem => item.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem => item.OgrenciSoyad)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OgrenciKimlik" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgrenciKimlik" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>